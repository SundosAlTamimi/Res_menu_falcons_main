<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<ImageView-->
            <!--android:id="@+id/logo"-->
            <!--android:layout_width="160dp"-->
            <!--android:layout_height="160dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="@drawable/logo_transparent" />-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="156dp"
            android:layout_marginLeft="156dp"
            android:src="@drawable/logo_transparent"
            app:civ_border_color="@color/red"
            app:civ_border_width="2dp" />



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:padding="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/ip_text"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="@string/ip_server"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/ip_edit"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="@string/restaurant_name"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/restName"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@color/black" />
            </TableRow>

        </TableLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <Button
                android:id="@+id/save"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_save_white_24dp"
                android:drawableLeft="@drawable/ic_save_white_24dp"
                android:background="@drawable/back_2_layout"
                android:text="@string/save"
                android:textColor="@color/white_dark"
                android:textSize="16sp" />

            <Button
                android:id="@+id/exit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:drawableStart="@drawable/ic_exit_to_app_white_24dp"
                android:drawableLeft="@drawable/ic_exit_to_app_white_24dp"
                android:layout_weight="1"
                android:background="@drawable/back_2_layout"
                android:text="@string/exit"
                android:textColor="@color/white_dark"
                android:textSize="16sp" />
        </TableRow>

    </LinearLayout>

</LinearLayout>